{% style %}
  #shopify-section--template--20705600536869__0268fef9-8e3d-4e60-b283-ad11029fcdc6 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 0;
    padding: 0 1rem;
    height: 60rem;
    background-color: #fea63e;
    color: white;
  }
  .main-details-wrapper {
    width: 46%;
    display: flex;
    justify-content: center;
  }
  .main-details {
    max-width: 70rem;
    padding: 5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .main-details > h1 {
    color: white;
    margin: 0;
  }
  .main-details > div {
    border-bottom: 1px solid white;
    padding: 1rem;
  }
