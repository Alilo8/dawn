    height: 32rem;
    margin-top: 1.5rem;
    border-radius: 15px;
  }
  @keyframes yticker {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(0, -67rem, 0);
    }
  }
  @keyframes yticker-reverse {
    0% {
      transform: translate3d(0, -67rem, 0);
    }
    100% {
      transform: translate3d(0, 0, 0);
    }
  }
{% endstyle %}